<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/list_background"
	>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@android:style/ButtonBar"
            >

        <Button android:id="@+id/back"
            android:layout_height="40sp"
            android:layout_width="80sp"
            android:text="Back"
            android:layout_alignParentLeft="true"
            android:textColor="@color/dark_gray"
            android:layout_centerVertical="true"
        />

        <TextView android:id="@+id/title" 
               android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="Help" 
                android:layout_centerInParent="true"
                android:textColor="@color/light_gray"
                />
        
    </RelativeLayout>  

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >
            
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/quick_start_help_panel"
            >
           

        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is Pomodoro Technique?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/dark_gray"
            android:paddingBottom="5dp"
            />

        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Pomodoro Technique™ is a way to get the most out of time management. Turn time into a valuable ally to accomplish what we want to do and chart continuous improvement in the way we do it."
            android:textColor="@color/dark_gray"
            android:paddingBottom="5dp"
            />
            
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Francesco Cirillo created the Pomodoro Technique™ in 1992. It is now practiced by professional teams and individuals around the world. (Text taken from www.pomodorotechnique.com)"
            android:textColor="@color/dark_gray"
            android:paddingBottom="5dp"
            />            

        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How can I start?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/dark_gray"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            />
            
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 - Add a task"
            android:textColor="@color/dark_gray"
            android:paddingBottom="5sp"
            />
            
        <TextView  
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 - Select task to start the Pomodoro (the Pomodoro is the timer and is for 25 minutes)"
            android:textColor="@color/dark_gray"
            android:paddingBottom="5sp"
            />

        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 - Work on the task until the Pomodoro rings. A tomato icon is added to the shelf to keep track of the Pomodoros you have earned."
            android:textColor="@color/dark_gray"
            android:paddingBottom="5sp"
            />

        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 - Take a short break (5 min) after each task, and a long one after every four."
            android:textColor="@color/dark_gray"
            android:paddingBottom="5sp"
            />
                                            
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 - Swipe right to complete a task (swipe left to undo)"
            android:textColor="@color/dark_gray"
            android:paddingBottom="5sp"
            />

        <TextView android:id="@+id/visitText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visit www.pomodorotechnique.com to learn more about the technique."
            android:textColor="@color/dark_gray"
            android:paddingTop="5sp"
            android:paddingBottom="10sp"
            android:clickable="true"
            />    
            
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To get back to this page, press the Menu button and choose Help"
            android:textColor="@color/very_dark_gray"
            android:padding="5sp"
            android:background="@drawable/highlight_background"
            />                                 
        
	</LinearLayout>	  

	</ScrollView>	  
		 
</LinearLayout>